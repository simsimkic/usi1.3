<Window x:Class="ZdravoCorp.GUI.Patient_s_View.PatientView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZdravoCorp.GUI"
        mc:Ignorable="d"
        Title="PatientView" Height="450" Width="450">
    <Grid>
        <Label Content="&#x9;&#x9;            Patient's window" HorizontalAlignment="Center" Margin="0,39,0,0" VerticalAlignment="Top" Width="426" Height="33" FontWeight="Bold" FontFamily="Segoe UI" FontSize="14" Background="#FFF4E9E9"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <Button Margin="10,10,10,10" Height="25" Click="ShowAppointmentScheduling_Click">Create appointment</Button>
            <Button Margin="10,10,10,10" Height="25" Width="150" Click="ShowAppointmentsTable_Click">Show my appointments</Button>
            <Button Margin="10,10,10,10" Height="25" Width="150" Click="ShowRequestCreating_Click">Create request</Button>
            <Button Margin="10,10,10,10" Height="25" Width="150" Click="ShowPastAppointments_Click">Show past appointments</Button>
            <Button Margin="10,10,10,10" Height="25" Width="150" Click="ShowMedicalRecords_Click">Show medical records</Button>
        </StackPanel>
    </Grid>

</Window>
